# FastAPI应用配置
APP_NAME="Taible Storage API"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=INFO
# Railway部署时会自动设置PORT环境变量
# PORT=8000

# 数据库配置 (Railway会自动注入DATABASE_URL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis配置 (Railway会自动注入REDIS_URL)
# REDIS_URL=redis://user:password@host:port/database

# Cloudflare R2配置
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_custom_domain.com

# 缓存TTL配置 (秒)
CACHE_TTL_USER=3600
CACHE_TTL_PRODUCT=1800
CACHE_TTL_CONFIG=7200
CACHE_TTL_STATS=900
CACHE_TTL_SEARCH=300

# 文件上传配置
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip